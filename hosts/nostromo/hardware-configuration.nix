    "usbhid"
    "sd_mod"
  ];
  boot.initrd.kernelModules = [ ];
  boot.kernelModules = [ "kvm-amd" ];
  boot.extraModulePackages = [ ];

  fileSystems."/" = {
    device = "/dev/disk/by-uuid/f91182d7-d999-440e-9165-93f85697b414";
    fsType = "ext4";
  };

  boot.initrd.luks.devices."luks-2d31dad6-e1e8-432c-b480-e65dc6cf43d7".device =
